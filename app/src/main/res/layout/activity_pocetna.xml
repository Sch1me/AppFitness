<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PocetnaActivity">

    <ListView
        android:id="@+id/listaTreninga"
        android:layout_width="240dp"
        android:layout_height="620dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pokreniButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/osobeButton" />

    <Button
        android:id="@+id/osobeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Osobe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="50dp"/>

    <Button
        android:id="@+id/vjezbeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vjezbe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"/>

    <Button
        android:id="@+id/pokreniButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokreni"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="150dp"/>

    <Button
        android:id="@+id/zavrsiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zavrsi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="50dp"
         />

    <Button
        android:id="@+id/izmjeniButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Izmjeni"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="150dp" />

</androidx.constraintlayout.widget.ConstraintLayout>