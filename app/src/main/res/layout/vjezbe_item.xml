<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewImeVjezbe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ime vjezbe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/textViewBrojPonavljanja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broj Ponavljanja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewImeVjezbe"
        android:layout_marginStart="25dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/textViewBrojSerija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broj serija"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewVrstaVjezbe"
        android:layout_marginEnd="25dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/textViewVrstaVjezbe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vrsta Vjezbe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        android:layout_marginVertical="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>